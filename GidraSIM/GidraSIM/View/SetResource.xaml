<Window x:Class="GidraSIM.SetResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Свойства ресурса" Height="346" Width="419" FontSize="16">
    <Window.Background>
        <ImageBrush ImageSource="/GidraSIM;component/Image/background.jpg" />
    </Window.Background>
    <Grid Background="#C7FFFFFF">
        <Label Content="Тип ресурса" Height="37" HorizontalAlignment="Left" Margin="15,12,0,0" Name="label1" VerticalAlignment="Top" FontSize="16" Width="113" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="141,17,0,0" Name="comboBox1" VerticalAlignment="Top" Width="171" SelectionChanged="comboBox1_SelectionChanged" />
        <DataGrid AutoGenerateColumns="False" Height="185" HorizontalAlignment="Left" Margin="15,55,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="366" CanUserAddRows="True" CanUserDeleteRows="True" />
        <Button Content="Сохранить" Height="37" HorizontalAlignment="Left" Margin="72,258,0,0" Name="button_SaveResource" VerticalAlignment="Top" Width="97" Click="button_SaveResource_Click" />
        <Button Content="Отмена" Height="37" HorizontalAlignment="Left" Margin="232,258,0,0" Name="button_Cancel" VerticalAlignment="Top" Width="89" Click="button_Cancel_Click" />
    </Grid>
</Window>
